<!DOCTYPE html>
<html>
    <%- include('../../partials/title.ejs') %>
    <body class="w3-content" style="max-width:1200px">
        <%- include('../../partials/slidebar.ejs') %>
    <!-- !PAGE CONTENT! -->
    <div class="w3-main" style="margin-left:250px">
    <!-- Push down content on small screens -->
    <div class="w3-hide-large" style="margin-top:83px"></div>
    <%- include('../../partials/header.ejs') %>
<!-- sign up form -->
    <div class="container">
        <div class="wrapper animated bounceInLeft">
            <div class="contact">

            <form  action="/signup" method="POST">
                <div class="colsignup">
                    <h1>Sign Up</h1>
                    <p>Please fill in this form to create an account.</p>
                    <hr>
                    <label for="name"><b>Name</b></label>
                    <input type="text" placeholder="Enter Name" name="name" required>

                    <label for="phone"><b>Phone</b></label>
                    <input type="text" placeholder="Enter phone" name="phone" required>
                    <label for="phone"><b>Choose your gender:</b></label>
                    
                    <div class="register-switch">
                        <input type="radio" name="sex" value="female" id="sex_f" class="register-switch-input" checked>
                        <label for="sex_f" class="register-switch-label">Female</label>
                        <input type="radio" name="sex" value="male" id="sex_m" class="register-switch-input">
                        <label for="sex_m" class="register-switch-label">Male</label>
                    </div>
                    <label for="email"><b>Email</b></label>
                    <input type="text" placeholder="Enter Email" name="email" required>

                    <label for="psw"><b>Password</b></label>
                    <input type="password" placeholder="Enter Password" name="psw" required>

                    <label for="pswrepeat"><b>Repeat Password</b></label>
                    <input type="password" placeholder="Repeat Password" name="pswrepeat" required>
                    
                    <label>
                        <input type="checkbox" checked="checked" name="remember" style="margin-bottom:15px"> Remember me
                    </label>

                    <p>By creating an account you agree to our <a href="#" style="color:dodgerblue">Terms & Privacy</a>.</p>
                    <input type="submit" value="SIGN UP">
                    </div>
                </form>

            </div>
        </div>
    </div>


    <%- include('../../partials/script.ejs')%>
    </body>
</html>

